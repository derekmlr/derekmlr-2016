*
	box-sizing:border-box
	margin:0
	padding:0
	
a
	color:$linkColor
	text-decoration:$linkDecoration
	
body
	background:$bg
	color:$textColor
	font:15px/1.5em "Open Sans",helvetica,arial
	-webkit-font-smoothing: antialiased

hr
	border:none
	border-top:1px solid $borderColor
	margin:50px auto
	width:920px

#header
#content
#footer
	margin:0 auto
	max-width:790px
	width:100%
	
#header
	padding:100px 0 64px
	text-align:center
	
#logo
	image '/img/logo.png'
	display:inline-block
	height:80px
	margin:0 0 20px
	text-indent:-9999px
	width:120px

#work
	header
		display:none
		
#footer
	text-align:center

// Portfolio work list
#work-list
	margin-left:-35px
	position:relative
	width:880px
	.item
		background:#eee
		border:1px solid $borderColor
		cursor:pointer
		display:inline-block
		height:150px
		margin:0 20px 20px 0
		opacity:0
		overflow:hidden
		position:relative
		top:20px
		width:200px
		transform:scale(0.9)
		transition:all 0.2s ease-in-out
		&.show
			opacity:1
			top:0
			transform:scale(1)
			&:hover
				.thumb
					-webkit-filter:blur(10px)
				.meta
					opacity:1
					transform:scale(1)
		.thumb
			max-width:100%
			width:100%
		.meta
			background:rgba(255,255,255,0.88)
			bottom:0
			left:0
			opacity:0
			padding:20px
			position:absolute
			right:0
			top:0
			transform:scale(0.8)
			transition:all 0.1s ease-in-out
#work-preview
	background:$borderColor
	background-size:100% auto
	box-shadow:0 3px 12px rgba(0,0,0,0.25)
	height:300px
	opacity:0
	position:absolute
	transform:scale(0.8)
	transition:scale 0.1s ease-in-out,opacity 0.1s ease-in-out
	width:400px
	&.show
		opacity:1
		transform:scale(1)