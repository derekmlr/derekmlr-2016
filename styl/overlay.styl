body.overlay-open
	#video-container
		opacity:0
		visibility:hidden

.overlay
	display:block

#overlay
	background:white
	background:rgba(255,255,255,0.94)
	bottom:0
	left:0
	opacity:0
	overflow:auto
	position:fixed
	right:0
	transition:all 0.2s ease-in-out
	top:0
	visibility:hidden
	z-index:999
	&.show
		opacity:1
		visibility:visible
		#overlay-close
			opacity:1
			top:40px
		
#overlay-content
	opacity:0
	padding-bottom:100px
	position:relative
	visibility:hidden
	transform:scale(0.8)
	transform-origin:50% 10%
	transition:all 0.2s ease-in-out
	&.show
		opacity:1
		top:0
		transform:scale(1)
		visibility:visible
		
#overlay-close
	color:$textAltColor
	display:block
	font-size:56px
	font-weight:200
	opacity:0
	position:fixed
	right:40px
	text-decoration:none !important
	top:0px
	transition:all 0.2s ease-in-out
	&:hover
		color:$textColor