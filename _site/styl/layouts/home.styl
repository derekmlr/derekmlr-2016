body
	&.loaded
		#page-loader
			opacity:0
			visibility:hidden
			.spinner
				opacity:0
				transform:scale(0.1)
		#header
			#logo, h1, p, ul
				transform:translate3d(0,0,0)
				opacity:1
				visibility:visible 
		#work
			opacity:1
			transform:translate3d(0,0,0)
			visibility:visible

#header
	.inner
		transform:translate3d(0,0,0)
	#logo, h1, p, ul
		opacity:0
		position:relative
		transform:translate3d(0,-20px,0)
		transition:all 0.8s ease-in-out
		visibility:hidden
	#logo
		transition-delay:0.4s
	h1
		transition-delay:1s
	p
		transition-delay:1.2s
	ul
		transition-delay:1.5s
		
#work
	opacity:0
	transform:translate3d(0,20vh,0)
	transition:all 0.5s ease-in-out
	transition-delay:2s
	visibility:hidden
	header
		display:none

// Portfolio work list
.work-list
	margin:0
	padding:0
	position:relative
	clearfix()
	.work
		background:rgba(3,3,3,0.2) center
		background-size:auto 100%
		border:1px solid transparent
		display:block
		float:left
		font-size:14px
		margin:0
		opacity:1
		overflow:hidden
		position:relative
		width:33.33%
		text-align:center
		transition:all 0.2s ease-in-out
		height:320px
		&:before
			bottom:0
			content:''
			display:block
			left:0
			position:absolute
			right:0
			top:0
			z-index:1
		&:hover
			background-size:auto 120%