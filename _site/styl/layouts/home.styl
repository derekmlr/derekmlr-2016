body
	&.loaded
		#page-loader
			opacity:0
			visibility:hidden
			.spinner
				opacity:0
				transform:scale(0.1)
		#header
			#logo, h1, p, ul
				transform:translate3d(0,0,0)
				opacity:1
				visibility:visible 
		#work
			opacity:1
			transform:translate3d(0,0,0)
			visibility:visible

#header
	.inner
		transform:translate3d(0,0,0)
	#logo, h1, p, ul
		opacity:0
		position:relative
		transform:translate3d(0,-20px,0)
		transition:all 0.8s ease-in-out
		visibility:hidden
	#logo
		transition-delay:0.4s
	h1
		transition-delay:1s
	p
		transition-delay:1.2s
	ul
		transition-delay:1.5s
		
#work
	opacity:0
	transform:translate3d(0,20vh,0)
	transition:all 0.5s ease-in-out
	transition-delay:2s
	visibility:hidden