*
	box-sizing:border-box
	margin:0
	padding:0
	
a
	color:$linkColor
	text-decoration:$linkDecoration
	&:hover
		text-decoration:underline
		
html
body
	height:100%
	positon:relative
	
body
	color:$textColor
	font:16px/2em "Open Sans",helvetica,arial
	-webkit-font-smoothing: antialiased
	&.loaded
		#page-loader
			opacity:0
			visibility:hidden
			.spinner
				opacity:0
				transform:scale(0.1)
		#header
			#logo, h1, p, ul
				transform:translate3d(0,0,0)
				opacity:1
				//top:0
				visibility:visible

#header
	#logo, h1, p, ul
		opacity:0
		position:relative
		transform:translate3d(0,-20px,0)
		transition:all 0.8s ease-in-out
		visibility:hidden
	h1
		transition-delay:0.4s
	p
		transition-delay:0.8s
	ul
		transition-delay:1s
	

hr
	border:none
	border-top:1px solid $borderColor
	margin:40px auto
	max-width:1100px
	width:100%

#page-loader
	background:white
	bottom:0
	left:0
	position:fixed
	right:0
	text-align:center
	top:0
	transition:all 0.4s ease-in-out
	visibility:visible
	z-index:9999
	&:before
		content:''
		display:inline-block
		height:100%
		vertical-align:middle
		width:0
	.spinner
		opacity:1
		transform:scale(1)
		transition:all 0.2s ease-in-out

#wrapper
	height:100%
	position:relative
	z-index:1

#header
#content
#footer
	margin:0 auto
	max-width:1250px
	width:100%

#logo
#header
	position:relative
	
#header
	height:80%
	max-height:800px
	min-height:500px
	padding:0
	position:relative
	text-align:center
	&:before
		content:''
		display:inline-block
		height:100%
		vertical-align:middle
		width:0
	.inner
		display:inline-block
		margin-top:0
		vertical-align:middle
		width:600px
	p
		line-height:1.7em
	.skills-list
		list-style:none
		margin-top:-0.5em
		text-align:center
		.skill
			color:$textAltColor
			display:inline-block
			font-size:0.8rem
			margin:0 10px
			padding-left:25px
			position:relative
			text-transform:uppercase
			// Temporary icon placeholder
			&:before
				background:$borderColor
				border:1px solid $borderColor
				border-radius:16px
				content:''
				display:block
				height:16px
				left:0
				margin:-9px 0 0
				position:absolute
				top:50%
				width:16px
	
#logo
	image '/img/logo.png' 100% auto
	background-size:100% auto
	display:inline-block
	height:80px
	margin:0 0 25px
	text-indent:-9999px
	width:120px
		
#footer
	color:$textAltColor
	height:30%
	position:relative
	text-align:center
	&:before
		content:''
		display:inline-block
		height:90%
		vertical-align:middle
		width:0
	.inner
		display:inline-block
		vertical-align:middle
	#social-list
		list-style:none
		margin:0 auto
		max-width:420px
		text-align:center
		.social
			background:rgba(0,0,0,0.08)
			border-radius:32px
			display:inline-block
			height:64px
			margin:0 10px
			width:64px
	.credits
		bottom:0
		display:block
		font-size:0.8rem
		left:0
		margin:0 0 1em
		position:absolute
		width:100%
		

#case-studies,
#work
	header
		display:none

// Portfolio work list
.work-list
	margin:0 0 0 2%
	padding:0
	position:relative
	clearfix()
	.work
		background:rgba(0,0,0,0.08)
		display:block
		float:left
		font-size:14px
		margin:0 2% 2% 0
		opacity:1
		overflow:hidden
		position:relative
		width:31%
		text-align:center
		transition:all 0.2s ease-in-out
		height:300px