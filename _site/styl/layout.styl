*
	box-sizing:border-box
	margin:0
	padding:0
	
a
	color:$linkColor
	text-decoration:$linkDecoration
	&:hover
		text-decoration:underline
	
body
	background:$bg
	image '/img/wolf-bg.png'
	background-size:100% auto
	background-repeat:no-repeat
	color:$textColor
	font:16px/1.6em "Open Sans",helvetica,arial
	-webkit-font-smoothing: antialiased

hr
	border:none
	border-top:1px solid $borderColor
	margin:40px auto
	max-width:1100px
	width:100%

#header
#content
#footer
	margin:0 auto
	max-width:790px
	width:100%
	
#header
	padding:120px 0 80px
	text-align:center
	.skills-list
		list-style:none
		margin-top:2em
		text-align:center
		.skill
			color:$textAltColor
			display:inline-block
			font-size:0.8rem
			margin:0 10px
			padding-left:25px
			position:relative
			text-transform:uppercase
			// Temporary icon placeholder
			&:before
				background:$borderColor
				border:1px solid $borderColor
				border-radius:16px
				content:''
				display:block
				height:16px
				left:0
				position:absolute
				width:16px
				top:4px
	
#logo
	image '/img/logo.png'
	display:inline-block
	height:80px
	margin:0 0 20px
	text-indent:-9999px
	width:120px
		
#footer
	color:$textAltColor
	text-align:center
	#social-list
		list-style:none
		text-align:center
		.social
			background:#eee
			border:1px solid $borderColor
			border-radius:32px
			display:inline-block
			height:64px
			margin:20px 10px
			width:64px
	.credits
		display:block
		font-size:0.9rem
		margin:1em 0 2em
		


#case-studies,
#work
	header
		display:none

// Portfolio work list
.work-list
	margin:0 0 -20px -75px
	padding:0 0 20px
	position:relative
	width:960px
	clearfix()
	&.studies-list
		.work
			cursor:pointer
			height:250px
			width:460px
	.work
		background:#eee
		border:1px solid $borderColor
		cursor:zoom-in
		display:block
		height:226px
		float:left
		margin:0 20px 20px 0
		opacity:0
		overflow:hidden
		position:relative
		width:300px
		transform:scale(0.8)
		transition:all 0.2s ease-in-out
		&.show
			opacity:1
			transform:scale(1)
			&:hover
				.thumb
					-webkit-filter:blur(10px)
				.meta
					opacity:1
					transform:scale(1)
		.thumb
			max-width:100%
			width:100%
		.meta
			background:rgba(255,255,255,0.8)
			bottom:0
			left:0
			opacity:0
			padding:20px
			position:absolute
			right:0
			top:0
			transform:scale(0.8)
			transition:all 0.1s ease-in-out
#work-preview
	background:$borderColor
	background-size:100% auto
	box-shadow:0 3px 12px rgba(0,0,0,0.25)
	height:450px
	opacity:0
	position:absolute
	transform:scale(0.8)
	transition:scale 0.1s ease-in-out,opacity 0.1s ease-in-out
	width:600px
	&.show
		opacity:1
		transform:scale(1)